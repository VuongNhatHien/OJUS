{
  "scripts": {
    "clean": "rm -rf coverage dist",
    "lint": "eslint src/**/*.ts",
    "test": "dotenv -e .env.test -- jest -i --forceExit --detectOpenHandles",
    "build": "tsoa spec-and-routes && tsc",
    "start": "ts-node src/index.ts",
    "seed": "ts-node prisma/seed.ts",

    "start:api": "node dist/index.js",
    "start:worker": "node dist/worker.js",

    "dev:api": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "dev:worker": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/worker.ts",
    "dev:tsoa": "nodemon -x tsoa spec-and-routes",

    "dev": "concurrently \"npm run dev:api\" \"npm run dev:worker\" \"npm run dev:tsoa\""
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/adm-zip": "^0.5.6",
    "@types/amqplib": "^0.10.6",
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/express-serve-static-core": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.9.1",
    "@types/nodemailer": "^6.4.16",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.7",
    "concurrently": "^9.1.0",
    "express": "^4.21.2",
    "jest": "^29.7.0",
    "nodemon": "^3.1.7",
    "prettier": "3.3.3",
    "prisma": "^6.1.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.685.0",
    "@aws-sdk/s3-request-presigner": "^3.685.0",
    "@prisma/client": "^6.1.0",
    "adm-zip": "^0.5.16",
    "amqplib": "^0.10.5",
    "axios": "^1.7.7",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.4.4",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.15",
    "npm": "^11.0.0",
    "supertest": "^7.0.0",
    "swagger-ui-express": "^5.0.1",
    "tsoa": "^6.5.1",
    "uuid": "^11.0.2"
  }
}
